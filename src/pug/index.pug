    section.sec-news
      h3 News
      h4 新着情報

      ul.news_list
        each news in newsArr
          time.time= news.time
          .update!= news.update

    section.sec-sponsor
      h3 Sponsor
      h4 協賛企業
  
      ul.sponsor-list
        each s in sponsor
          li.sponsor-item
            a(href= s.url, target="blank")
