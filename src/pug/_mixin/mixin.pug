mixin publication(bib)
  - let { author, title, journal, year } = bib.entryTags
  - author = author.split(' and ').join('，')
  = author
  | ，
  = title
  | ，
  = journal
  | ，
  = year
  | ．

mixin publication-list(type)
  .publication-list
    - publicationArr = _.filter(bibArr, function(bib) { return bib.entryTags.type === type; });
    each publication in publicationArr
      .publication-item
        +publication(publication)
