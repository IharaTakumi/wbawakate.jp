extends /_layout/_default-layout

append config-block
  - pageId = 'member'
  - rootPath = '../'

block content-block
  main
    each branch, branchName in members
      if branchName === 'society'
        h2.heading-branch
          .text
            | WBA 若手の会 社会人支部
      if branchName === 'blockChain'
        h2.heading-branch
          .text
            | WBA 若手の会 ブロックチェーン支部
      .member-list
        each member in branch
          .member-item
            - href = member.link ? `${rootPath}${member.link}` : null
            a.elm-a(href= href)
              .member
                .image(style=`background-image: url(${rootPath}img/member/${member.image})`)
                .cover
                .info
                  .block-status
                    .position
                      = member.position
                    .status
                      = member.status
                  .block-name
                    .name
                      = member.name
                    .name-sub
                      = member.nameSub
