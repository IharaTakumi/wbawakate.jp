extends /_layout/_default-layout

append config-block
  - pageId = 'member-detail'
  - rootPath = '../'

block content-block
  main.main
    h1.name
      = meta.name
    if meta.nameSub
      .sub-name
        = meta.nameSub

    .body
      != body

    if meta.facebook
      .facebook
        a(href=`${meta.facebook}`, target="_blank")
          | facebook
    if meta.twitter
      .twitter
        a(href=`${meta.twitter}`, target="_blank")
          | twitter
