extends /_layout/_default-layout

append config-block
  - pageId = 'member-detail'
  - rootPath = '../'

block content-block
  main.main
    - publicationArr = _.filter(bibArr, function(bib) { return !bib.entryTags.authorKey.split(',').indexOf(meta.id); });

    .front-block
      .image
        img(src= `${meta.image || "//placehold.jp/300x300.png"}`)
      .profile.hover-effect
        h1.name
          = meta.name
        if meta.nameSub
          .sub-name
            = meta.nameSub

        .body
          != body
          if publicationArr.length > 0
            h2
              | Publications
            .publication-list
              each publication in publicationArr
                .publication-item
                  - let { author, title, journal, year } = publication.entryTags
                  - author = author.split(' and ').join('，')
                  = author
                  | ，
                  = title
                  | ，
                  = journal
                  | ，
                  = year
                  | ．

        .sns-list.no-hover-effect
          if meta.facebook
            .sns-item.facebook
              a.elm-a(href=`${meta.facebook}`, target="_blank")
                i.fa.fa-facebook
          if meta.twitter
            .sns-item.twitter
              a.elm-a(href=`${meta.twitter}`, target="_blank")
                i.fa.fa-twitter
